<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.vivo_app_call.fragment.call">

    <data>

        <variable
            name="Calldata"
            type="com.example.vivo_app_call.fragment.call.CallModelView" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >






    <TextView
        android:id="@+id/result_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        android:layout_gravity="end"
        android:ellipsize="none"
        android:singleLine="true"
        android:text="@{Calldata.numbersAll}"
        android:gravity="center"
        android:padding="8dp"

        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/result_id"
        app:layout_constraintStart_toStartOf="@id/result_id"
        app:layout_constraintTop_toBottomOf="@+id/result_id">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/one_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="50dp"
                android:layout_height="80dp"

                android:layout_margin="0dp"
                android:layout_weight="1"
                android:onClick="@{()->Calldata.btnNumber(String.valueOf(1))}"
                android:text="@string/one"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"

                android:textColor="@color/black" />

            <Button
                android:id="@+id/two_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:onClick="@{()->Calldata.btnNumber(String.valueOf(2))}"
                android:text="@string/two"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"

                android:textColor="@color/black" />

            <Button
                android:id="@+id/three_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:onClick="@{()->Calldata.btnNumber(String.valueOf(3))}"
                android:text="@string/three"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/four_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:onClick="@{()->Calldata.btnNumber(String.valueOf(4))}"
                android:text="@string/four"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"

                android:textColor="@color/black" />

            <Button
                android:id="@+id/five_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:onClick="@{()->Calldata.btnNumber(String.valueOf(5))}"
                android:text="@string/five"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"

                android:textColor="@color/black" />

            <Button
                android:id="@+id/six_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:onClick="@{()->Calldata.btnNumber(String.valueOf(6))}"
                android:text="@string/six"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/seven_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:onClick="@{()->Calldata.btnNumber(String.valueOf(7))}"
                android:text="@string/seven"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/egt_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:onClick="@{()->Calldata.btnNumber(String.valueOf(8))}"
                android:text="@string/et"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"

                android:textColor="@color/black" />

            <Button
                android:id="@+id/nig_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:onClick="@{()->Calldata.btnNumber(String.valueOf(9))}"
                android:text="@string/ig"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/star_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:onClick="@{()->Calldata.btnNumber(@string/star)}"
                android:text="*"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"

                android:textColor="@color/black" />

            <Button
                android:id="@+id/zero_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:onClick="@{()->Calldata.btnNumber(String.valueOf(0))}"
                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"

                android:textColor="@color/black" />

            <Button
                android:id="@+id/hes_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:onClick="@{()->Calldata.btnNumber(@string/hes)}"
                android:text="#"

                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/list_all"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:src="@drawable/ic_baseline_people_24"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black" />


            <ImageButton
                android:id="@+id/call"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="@drawable/item_btn"
                android:onClick="passdata"
                android:src="@drawable/ic_baseline_call_24"
                android:text="call"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black"
                android:theme="@style/Theme.green">


            </ImageButton>

            <ImageButton
                android:id="@+id/cancle"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:onClick="@{()->Calldata.clearDigitone()}"
                android:onLongClick="@{()->Calldata.clearDigit()}"
                android:src="@drawable/ic_baseline_backspace_24"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black" />


        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>